<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DBSederhana"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etNRP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="16dp"
        android:hint="NRP"
        android:inputType="text" />

    <EditText
        android:id="@+id/etNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etNRP"
        android:layout_marginTop="16dp"
        android:hint="Nama"
        android:inputType="text" />

    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etNama"
        android:layout_marginTop="16dp"
        android:text="Simpan"
        android:layout_alignParentStart="true"
        android:maxWidth="100dp" />

    <Button
        android:id="@+id/btnAmbilData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etNama"
        android:layout_marginTop="16dp"
        android:text="Ambil"
        android:layout_toEndOf="@id/btnSimpan"
        android:maxWidth="100dp" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etNama"
        android:layout_marginTop="16dp"
        android:text="Update"
        android:layout_toEndOf="@id/btnAmbilData"
        android:maxWidth="100dp" />


    <Button
        android:id="@+id/btnHapus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etNama"
        android:layout_marginTop="16dp"
        android:text="Hapus"
        android:layout_toEndOf="@id/btnUpdate"
        android:maxWidth="100dp" />


</RelativeLayout>
